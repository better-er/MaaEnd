{
    // 批量简易制作
    // SimpleProductionBatch
    // 假设用户已经选择好要批量自作的道具
    // 1. 检测是否处于 简易制作页面
    // 2. 检测是否材料不足
    // 3. 点击最大数量按钮
    // 4. 点击制作按钮
    // 5. 检测到背包是否已满
    // 6. 检测是否处于两种制作成功页面的情况如果是则点击一下右下角区域
    // [ 1. 2. 3. 4. 5.] 循环进行，可以变相加速
    // 只有检测到 [2] [5] 直接结束任务
    "SimpleProductionBatchStart": {
        "doc": "开始执行批量简易制作",
        "next": [
            "CheckIsSimpleProductionPage",
            "SimpleProductionBatchEnd"
        ]
    },
    "SimpleProductionBatchEnd": {
        "doc": "不是简易制作页面，非法情况直接结束",
        "focus": {
            "Node.Action.Succeeded": "$task.SimpleProductionBatch.error_not_found"
        }
    },
    "SimpleProductionBatchLoop": {
        "doc": "SimpleProductionBatch 的循环模式。能进到这里说明确定是在简易制作页面了，只有执行到无法制作的时候才会退出",
        "next": [
            "CheckIsSimpleProductionPage",
            // 循环模式中不是简易制作页面 ↑ 就是成功页面 ↓
            "ClickSimpleProductionSuccess",
            "ClickSimpleProductionSuccess2"
        ]
    },
    "CheckCantProduceAnyMore": {
        "doc": "检测是否材料不足，没有材料直接结束",
        "recognition": "OCR",
        "expected": [
            "当前材料不足"
        ],
        "roi": [
            986,
            616,
            294,
            104
        ]
    },
    "CheckMaterialEnough": {
        "doc": "检测背包是否已满，背包已满直接结束",
        "recognition": "OCR",
        "expected": [
            "空间已满",
            "可销毁或丢弃部分"
        ],
        "roi": [
            409,
            81,
            439,
            82
        ]
    },
    "CheckIsSimpleProductionPage": {
        "doc": "检测是否处于 [简易制作页面]",
        "recognition": "OCR",
        "expected": [
            "应急食药"
        ],
        "roi": [
            0,
            0,
            263,
            117
        ],
        "next": [
            "CheckCantProduceAnyMore", // 进行材料退出判断，在这里直接判断到就直接退出
            "ClickMaxBtn", // 点击最大制造数量
            "ClickProduceBtn" // 如果提前点过了 maxBtn 直接点生产
        ]
    },
    "ClickMaxBtn": {
        "doc": "点击最大数量按钮",
        "recognition": "TemplateMatch",
        "template": "SimpleProductionBatch/MaxProductionBtn.png",
        "threshold": 0.95,
        "roi": [
            1192,
            562,
            81,
            80
        ],
        "action": "Click",
        "next": [
            // 点击完 Max 制作按钮直接点击制作按钮
            "ClickProduceBtn"
        ]
    },
    "ClickProduceBtn": {
        "doc": "点击制作按钮",
        "recognition": "TemplateMatch",
        "template": "SimpleProductionBatch/ProduceBtn.png",
        "roi": [
            1134,
            614,
            139,
            95
        ],
        "action": "Click",
        "next": [
            "CheckMaterialEnough", // 进行背包满退出判断，在这里直接判断到就直接退出
            // 检查下是不是进入成功页面
            "ClickSimpleProductionSuccess",
            "ClickSimpleProductionSuccess2"
        ]
    },
    "ClickSimpleProductionSuccess": {
        "recognition": "OCR",
        "expected": [
            "制作成功"
        ],
        "roi": [
            570,
            55,
            142,
            84
        ],
        "next": [
            "ClickSimpleProductionRightDown"
        ]
    },
    "ClickSimpleProductionSuccess2": {
        "recognition": "OCR",
        "expected": [
            "制作成功"
        ],
        "roi": [
            559,
            335,
            161,
            102
        ],
        "next": [
            "ClickSimpleProductionRightDown"
        ]
    },
    "ClickSimpleProductionRightDown": {
        "action": "Click", // 看到制作成功之后，点击一下右下角
        "target": [
            // 右下角固定的一块区域
            937,
            556,
            203,
            117
        ],
        "pre_delay": 0,
        "post_delay": 0,
        "next": [
            // 点击之后 进入 loop
            "SimpleProductionBatchLoop"
        ]
    }
}
